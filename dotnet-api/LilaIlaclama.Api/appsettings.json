{
    "AllowedHosts": "*",
    "Cors": {
        "Origins": [
            "http://localhost:5173",
            "http://localhost:3000"
        ]
    },
    "Jwt": {
        "Issuer": "LilaIlaclama",
        "Audience": "LilaIlaclamaClient",
        "Secret": "change_this_very_long_secret_key_for_prod_please"
    },
    "ConnectionStrings": {
        "Default": "Server=(localdb)\\MSSQLLocalDB;Database=LilaIlaclama;Trusted_Connection=True;MultipleActiveResultSets=True;"
    },
    "Serilog": {
        "MinimumLevel": "Information",
        "WriteTo": [
            {
                "Name": "Console"
            },
            {
                "Name": "File",
                "Args": {
                    "path": "App_Data/log-.txt",
                    "rollingInterval": "Day"
                }
            }
        ]
    }
}